<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EditTaskCtr">
    <Label layoutX="42.0" layoutY="49.0" text="Task">
        <font>
          <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="taskNameTxt" layoutX="42.0" layoutY="74.0" prefHeight="44.0" prefWidth="549.0" promptText="Task Name">
        <font>
          <Font size="14.0" />
        </font>
    </TextField>
    <Label layoutX="42.0" layoutY="131.0" onMouseClicked="#deleteDate" text="delete date" textFill="#4017d7" underline="true" />
    <Label layoutX="42.0" layoutY="192.0" text="Description">
        <font>
          <Font size="14.0" />
        </font>
    </Label>
    <TextArea fx:id="descriptionTxt" layoutX="42.0" layoutY="212.0" prefHeight="94.0" prefWidth="549.0" promptText="task description" />
    <Label layoutX="42.0" layoutY="322.0" text="add check list" textFill="#4017d7" underline="true" />
    <Button fx:id="okBtn" layoutX="213.0" layoutY="352.0" mnemonicParsing="false" onAction="#onOkAction" text="OK" />
    <Button fx:id="cancelBtn" layoutX="317.0" layoutY="352.0" mnemonicParsing="false" onAction="#onCancelBtn" text="Cancel" />
    <DatePicker fx:id="dateTxt" layoutX="35.0" layoutY="159.0" promptText="01/01/2021" />
</AnchorPane>
